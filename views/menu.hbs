{{!-- Dashboard Tabla de Préstamos --}}

<div class="container mx-auto py-8 transition-colors duration-200">
    <div class="mb-4 flex justify-between">
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 pl-2 transition-colors duration-200">Piezas</h1>
        <div class="flex space-x-3">
            <div class="relative">
                <i
                    class="ri-search-line absolute left-3 top-1/2 transform -translate-y-1/2 text-zinc-400 dark:text-zinc-500"></i>
                <input type="text" placeholder="Buscar"
                    class="pl-10 pr-4 py-2 rounded-lg w-64 border border-zinc-200 dark:border-zinc-800 dark:bg-zinc-900 transition-colors duration-200 dark:text-white"
                    id="searchInput" onkeyup="filterTable()">
            </div>
            <a href="/nuevo"
                class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md w-full transition-colors duration-200 dark:bg-blue-800/60 dark:text-blue-500">
                Agregar Pieza
            </a>
        </div>
    </div>
    <div class="relative w-full overflow-auto rounded-lg shadow-md">
        <table class="w-full text-sm text-left text-zinc-700 dark:text-zinc-300 transition-colors duration-200">
            <thead
                class="text-xs text-zinc-800 dark:text-zinc-200 bg-zinc-200 dark:bg-zinc-700 transition-colors duration-200 text-center">
                <tr>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Nro. Registro
                    </th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Nombre</th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Medida</th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Material</th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Fecha
                        Adquisición</th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Forma
                        Adquirida</th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Años</th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Estado</th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Cantidad</th>
                    <th class="py-2 px-2 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Observación
                    </th>
                    <th class="py-2 px-2 w-28 text-zinc-800 dark:text-zinc-200 transition-colors duration-200">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each piezas}}
                {{#if this.BajaLogica}}
                {{!-- No renderiza nada si BajaLogica es verdadero --}}
                {{else}}
                <tr
                    class="odd:bg-zinc-100 even:bg-zinc-200 dark:odd:bg-zinc-800 dark:even:bg-zinc-700 border-b border-zinc-300 dark:border-zinc-600 transition-colors duration-200">
                    <td class="py-2 px-2 text-center">{{this.NumeroRegistro}}</td>
                    <td class="py-2 px-2 text-center">{{this.NombrePieza}}</td>
                    <td class="py-2 px-2 text-center">{{this.MedidaPieza}}</td>
                    <td class="py-2 px-2 text-center">{{this.MaterialObjeto}}</td>
                    <td class="py-2 px-2 text-center">{{this.FechaAdquisicion}}</td>
                    <td class="py-2 px-2 text-center">{{this.FormaAdquirida}}</td>
                    <td class="py-2 px-2 text-center">{{this.AñoPieza}}</td>
                    <td class="py-2 px-2 text-center">{{this.EstadoPieza}}</td>
                    <td class="py-2 px-2 text-center">{{this.Cantidad}}</td>
                    <td class="py-2 px-2 text-center">{{this.Observacion}}</td>
                    <td class="px-2 py-4">
                        <div class="flex flex-col space-y-2 w-full">
                            <button
                                class="eliminar-btn bg-red-600 text-white font-bold py-2 px-4 rounded-md hover:bg-red-500 w-full transition-colors duration-200 dark:bg-red-800/60 dark:text-red-500"
                                data-numero="{{this.NumeroRegistro}}" onclick="openConfirmDeleteModal(this)">
                                Eliminar
                            </button>
                            <form action="/enviarNreg" method="post">
                                <input type="hidden" name="editar" value="{{this.NumeroRegistro}}">
                                <button type="submit"
                                    class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-md w-full transition-colors duration-200 dark:bg-yellow-800/60 dark:text-yellow-500">Editar</button>
                            </form>
                        </div>
                    </td>
                </tr>
                {{/if}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<!-- Modal de Confirmación -->
<div id="confirmDeleteModal" class="relative z-10 hidden" aria-labelledby="confirmDeleteModalLabel" role="dialog"
    aria-modal="true">
    <div class="fixed inset-0 bg-zinc-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div
                class="relative transform overflow-hidden rounded-lg bg-white dark:bg-zinc-800 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
                <div class="bg-white dark:bg-zinc-800 px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div
                            class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100 dark:bg-red-900 sm:mx-0 sm:h-10 sm:w-10">
                            <svg class="h-6 w-6 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24"
                                stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                            <h3 class="text-base font-semibold leading-6 text-zinc-900 dark:text-zinc-100"
                                id="confirmDeleteModalLabel">Confirmación de Eliminación</h3>
                            <div class="mt-2">
                                <p class="text-sm text-zinc-700 dark:text-zinc-300">¿Estás seguro de que deseas eliminar
                                    la pieza <span id="piezaNombre"></span> con número de registro <span
                                        id="piezaNumero"></span>?</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-zinc-100 dark:bg-zinc-700 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                    <form action="/deletePieza" method="POST" id="deleteForm">
                        <input type="hidden" id="piezaNumeroInput" name="NroReg" value="">
                        <button type="submit"
                            class="inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto transition-colors duration-200"
                            id="confirmDeleteBtn">Sí, estoy seguro</button>
                    </form>
                    <button type="button"
                        class="mt-3 inline-flex w-full justify-center rounded-md bg-white dark:bg-zinc-600 px-3 py-2 text-sm font-semibold text-zinc-900 dark:text-zinc-100 shadow-sm ring-1 ring-inset ring-zinc-300 dark:ring-zinc-500 hover:bg-zinc-50 dark:hover:bg-zinc-500 sm:mt-0 sm:w-auto transition-colors duration-200"
                        onclick="toggleModal('confirmDeleteModal')">No deseo eliminar la pieza</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleModal(modalID) {
        document.getElementById(modalID).classList.toggle('hidden');
    }

    function openConfirmDeleteModal(button) {
        const piezaNombre = button.getAttribute('data-nombre');
        const piezaNumero = button.getAttribute('data-numero');

        document.getElementById('piezaNombre').innerText = piezaNombre;
        document.getElementById('piezaNumero').innerText = piezaNumero;
        document.getElementById('piezaNumeroInput').value = piezaNumero;

        toggleModal('confirmDeleteModal');
    }

    // Función para buscar en la tabla
    function filterTable() {
        const input = document.getElementById('searchInput');
        const filter = input.value.toLowerCase();
        const table = document.getElementById('piezaTable');
        const rows = table.getElementsByTagName('tr');

        for (let i = 1; i < rows.length; i++) { // Comienza en 1 para omitir el encabezado
            const cells = rows[i].getElementsByTagName('td');
            let rowVisible = false;

            for (let j = 0; j < cells.length; j++) {
                if (cells[j]) {
                    const cellValue = cells[j].textContent || cells[j].innerText;
                    if (cellValue.toLowerCase().indexOf(filter) > -1) {
                        rowVisible = true;
                        break; // Si se encuentra coincidencia, no es necesario seguir buscando en esa fila
                    }
                }
            }

            rows[i].style.display = rowVisible ? '' : 'none'; // Muestra u oculta la fila
        }
    }

    // Asignar el evento de búsqueda al input
    document.getElementById('searchInput').addEventListener('input', filterTable);
</script>